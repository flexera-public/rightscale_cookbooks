<%  case node[:app][:db_adapter]
    when "mysql" %>
<%= node[:app_passenger][:project][:environment] %>:
  adapter: <%= node[:app][:db_adapter] %>
  database: <%= @database %>
  username: <%= @user %>
  password: <%= @password %>
  host: <%= @fqdn %>
  encoding: utf8
  #socket: /var/lib/mysql/mysql.sock
<%  when "sqlite3","sqlite"%>
# SQLite version 3.x
<%= node[:app_passenger][:project][:environment] %>:
  host: <%= @fqdn %>
  adapter: <%= node[:app][:db_adapter] %>
  database: <%= @database %>
  pool: 5
  timeout: 5000
<%  when "postgresql"%>
<%= node[:app_passenger][:project][:environment] %>:
  host: <%= @fqdn %>
  adapter: <%= node[:app][:db_adapter] %>
  database: <%= @database %>
  username: <%= @user %>
  password: <%= @password %>
<%  else%>
<%= node[:app_passenger][:project][:environment] %>:
  host: <%= @sever %>
  adapter: <%= node[:app][:db_adapter] %>
  database: <%= @database %>

<%end%>
