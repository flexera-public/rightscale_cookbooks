global
        stats socket /etc/haproxy/status user haproxy group haproxy
        log /dev/log syslog info
        maxconn <%= @global_maxconn %>
        ulimit-n 8250
        chroot /etc/haproxy
        user haproxy
        group haproxy
        daemon
        quiet
        pidfile haproxy.pid

defaults
        log     global
        mode    http
        option  httplog
        option  dontlognull
        retries 3
        option  redispatch
        maxconn <%= @default_maxconn %>
        contimeout        5000
        timeout client <%= @timeout_client %>

        # Option to enable/disable httpclose parameter
      <% if @httpclose == "on" %>
        option httpclose
      <% else %>
        no option httpclose
      <% end %>

        # Option to enable/disable abortonclose parameter
      <% if @abortonclose == "on" %>
        option abortonclose
      <% else %>
        no option abortonclose
      <% end %>
