# Source function library.
if [ -f /etc/init.d/functions ]; then
  . /etc/init.d/functions
elif [ -f /etc/rc.d/init.d/functions ] ; then
  . /etc/rc.d/init.d/functions
else
  exit 0
fi


BASEDIR="/home/lb"
HABINARY="/usr/sbin/haproxy"

#relative, for chrooted environment
HACONFIG="$BASEDIR/rightscale_lb.cfg"
PIDFILE=`perl -nle 'print for m/\s*pidfile\s+([^\s]+)/'  $HACONFIG`


# This is our service name
BASENAME=`basename $0`
if [ -L $0 ]; then
  BASENAME=`find $0 -name $BASENAME -printf %l`
  BASENAME=`basename $BASENAME`
fi


RETVAL=0

start() {
  $HABINARY -c -q -f $HACONFIG
  if [ $? -ne 0 ]; then
    echo "Errors found in configuration file, check it with '$BASENAME check'."
    return 1
  fi
  echo -n "Starting $BASENAME: "
  daemon $HABINARY -q -D -f $HACONFIG 
  RETVAL=$?
  echo
  [ $RETVAL -eq 0 ] && touch /var/lock/subsys/$BASENAME
  return $RETVAL
}

stop() {
  echo -n "Shutting down $BASENAME: "
  kill -USR1 `cat $PIDFILE`
  RETVAL=$?
  
  if [ $RETVAL -eq 0 ] ; then
    echo_success
    rm -f /var/lock/subsys/$BASENAME
    rm -f $PIDFILE
  else
    echo_failure
  fi
  echo
  return $RETVAL
}

restart() {

  if [ -e $PIDFILE ]; then 
    #If running already, start gracefully
    daemon $HABINARY -q -D -f $HACONFIG -sf `cat $PIDFILE`
  else
    #if no daemon running, start normally
    echo "Warning, restarting with no daemon running..."
    daemon $HABINARY -q -D -f $HACONFIG
  fi
  return $?
}

check() {
  $HABINARY -c -q -V -f $HACONFIG
}

shutdown() {
  echo -n "Shutting (forced) down $BASENAME: "
  if [ -e $PIDFILE ] ; then
    kill -TERM `cat $PIDFILE`
    RETVAL=$?
  else
    RETVAL=3
  fi 
  if [ $RETVAL -eq 0 ] ; then
    echo_success
    rm -f /var/lock/subsys/$BASENAME
    rm -f $PIDFILE
  else
    echo_failure
  fi
  echo

  return $RETVAL
}

# See how we were called.
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  shutdown)
    shutdown
    ;;
  status)
    status -p $PIDFILE $BASENAME
    ;;
  check)
    check
    ;;
  *)
    echo $"Usage: $BASENAME {start|stop|restart|shutdown|status|check}"
    RETVAL=1
esac
 
exit $RETVAL

