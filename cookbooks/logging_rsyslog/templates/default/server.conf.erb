<% case node[:logging][:protocol] %>
<% when "udp" %>
$ModLoad imudp
$UDPServerRun 514
<% when "relp" %>
$ModLoad imrelp
$InputRELPServerRun 514
<% when "relp-secured" %>
$ModLoad imrelp
$InputRELPServerRun 515 # Listening to stunnel
<% end %>
